<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/border3"

    >

    <TextView
        android:id="@+id/nazwaPubu"
        android:layout_width="109dp"
        android:layout_height="81dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="nazwaPubu"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/address"
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:layout_marginTop="96dp"
        android:gravity="center"
        android:text="address"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Rate"
        android:layout_width="51dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="176dp"
        android:gravity="center"
        android:text="2/10"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/opinions"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/OpinionCount"
        android:layout_width="60dp"
        android:layout_height="49dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="176dp"
        android:gravity="center"
        android:text="count : 5"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Rate"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/opinions"
        android:layout_width="55dp"
        android:layout_height="49dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="176dp"
        android:gravity="center"
        android:text="Opinions :"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/moreInfo"
        android:layout_width="203dp"
        android:layout_height="37dp"
        android:layout_marginTop="232dp"
        android:gravity="center"
        android:text="click for more info"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activePromo"
        android:layout_width="203dp"
        android:layout_height="34dp"
        android:layout_marginTop="136dp"
        android:gravity="center"
        android:text="activePromo"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="60dp"
        android:layout_height="76dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/beer" />
</android.support.constraint.ConstraintLayout>